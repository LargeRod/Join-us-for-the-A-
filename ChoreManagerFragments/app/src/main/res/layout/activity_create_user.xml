<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter your name"
        android:padding="20dp" />

    <TextView
        android:id="@+id/selectAvatarTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Select your avatar"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/avatarGridLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/boy" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/boy1" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/girl" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/girl1" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/man" />

        <ImageButton
            android:id="@+id/imageButton16"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/man1" />

        <ImageButton
            android:id="@+id/imageButton17"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/man2" />

        <ImageButton
            android:id="@+id/imageButton18"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/man3" />

        <ImageButton
            android:id="@+id/imageButton19"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/man4" />
    </GridLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done" />
</LinearLayout>