<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameTextEdit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Enter your name"
        android:padding="20dp"
        android:text=""
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/selectAvatarTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Select your avatar"
        android:textSize="30sp" />

    <GridLayout
        android:id="@+id/avatarGridLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/a0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="man4"
            app:srcCompat="@drawable/man4" />

        <ImageButton
            android:id="@+id/a1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="boy"
            app:srcCompat="@drawable/boy" />

        <ImageButton
            android:id="@+id/a2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="boy1"
            app:srcCompat="@drawable/boy1" />

        <ImageButton
            android:id="@+id/a3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="girl"
            app:srcCompat="@drawable/girl" />

        <ImageButton
            android:id="@+id/a4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="girl1"
            app:srcCompat="@drawable/girl1" />

        <ImageButton
            android:id="@+id/a5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="man"
            app:srcCompat="@drawable/man" />

        <ImageButton
            android:id="@+id/a6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="man1"
            app:srcCompat="@drawable/man1" />

        <ImageButton
            android:id="@+id/a7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="man2"
            app:srcCompat="@drawable/man2" />

        <ImageButton
            android:id="@+id/a8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/CLEAR"
            android:onClick="highlightAvatar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tag="man3"
            app:srcCompat="@drawable/man3" />

    </GridLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="clickedDone"
        android:text="Done" />
</LinearLayout>