<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choreItemLayout"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/avatarImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/hollow_add"
        android:clickable="true"
        android:onClick="openProfile"
        android:padding="5dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="openTask"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/choreNameTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Chore Title Goes Here"
            android:textAppearance="@android:style/TextAppearance" />

        <TextView
            android:id="@+id/choreFootnoteTextView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Chore Footnote Goes Here" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="50dp"
        android:layout_height="match_parent" />

</LinearLayout>