<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context="joinusforthea.choreproject.choremanager11.TasksFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <!-- EV: focusable and focusableInTouchMode stop the app from opening a keyboard when launched-->

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="428dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:visibility="visible">

        <GridLayout
            android:id="@+id/materialsGrid"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/Name"
                android:layout_width="163dp"
                android:layout_height="28dp"
                android:text="Materials:" />

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="157dp"
                android:layout_height="43dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="CLR Remover" />

            <CheckBox
                android:id="@+id/checkBox15"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Broom" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="vacuum filter" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox13"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="CheckBox" />
        </GridLayout>

        <GridLayout
            android:id="@+id/groceriesGrid"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="163dp"
                android:layout_height="33dp"
                android:text="Groceries:" />

            <CheckBox
                android:id="@+id/checkBox17"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox18"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox21"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="CheckBox" />

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="openTaskActivity"
                android:text="+"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="  New item"
                android:inputType="textPersonName"
                android:textAlignment="viewStart" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>

