<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/opened_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/profile_and_release"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/boy" />

        <LinearLayout
            android:id="@+id/name_and_assignment"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="John Smith" />

            <TextView
                android:id="@+id/assignment"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:text="assigned" />
        </LinearLayout>

        <Space
            android:id="@+id/space1"
            android:layout_width="40dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:id="@+id/remove_and_release"
            android:layout_width="155dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/release"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Release"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                app:srcCompat="@drawable/remove" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_and_creator"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/duration_and_due"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/clock_and_duration"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/duration"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="2h"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/calender_and_due"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/due"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/schedule" />

                    <TextView
                        android:id="@+id/due"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="Today"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/creator_and_icon"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Kim"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    app:srcCompat="@drawable/creator" />

                <TextView
                    android:id="@+id/creator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creator"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/required_equipment"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Required Equipment"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/required_equipment_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Bucket"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Sponge"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Car Wax Kit"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Hose Nozzle"
                android:textSize="16sp" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Notes"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/note_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart" />

</LinearLayout>